<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe Card</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1 class="mb-4 text-center pt-3">Recipes</h1>
        <hr>
        <div class="row g-1 justify-content-center">
            <div class="col-auto">
                <label for="difficulty" class="font-weight-bold">Difficulty</label>
                <select id="difficulty" class="form-select rounded" style="width: 100px; height: 40px;">
                    <option value="any">Any</option>
                    <option value="easy">Easy</option>
                    <option value="intermediate">Intermediate</option>
                    <option value="hard">Hard</option>
                </select>
            </div>
            <div class="col-auto">
                <label for="category" class="font-weight-bold">Category</label>
                <select id="category" class="form-select rounded" style="width: 100px; height: 40px;">
                    <option value="any">Any</option>
                    <option value="dessert">Dessert</option>
                    <option value="lunch">Lunch</option>
                    <option value="dinner">Dinner</option>
                </select>
            </div>
            <div class="col-auto">
                <a href="/recipes/new" class="btn btn-primary" style="width: 100px; height: 40px;">Search</a>
            </div>
        </div>
        <div class="card mt-4">
            <a href="/recipes/new" class="btn btn-success">New Recipe</a>
        </div>
        <% recipes.forEach(recipe => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= recipe.title %></h4>
                    <div class="card-subtitle text-muted mb-2">
                        <b>Date Added:</b>
                        <%= recipe.createdAt.toLocaleDateString() %>
                        <b>Difficulty:</b>
                        <%= recipe.difficulty %>
                    </div>
                    <div class="card-text mb-2">
                        <%= recipe.description %>
                    </div>
                    <a class="btn btn-primary" href="recipes/<%= recipe.slug%>">Read More</a>
                    <a href="recipes/edit/<%= recipe.id %>" class="btn btn-info">Edit</a>
                    <form action="/recipes/<%= recipe.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">DELETE</button>
                    </form>
                </div>
            </div>

        <% }) %>

    </div>

</body>
</html>